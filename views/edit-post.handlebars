<div class="card">
    <h3 class="card-header">Edit Post</h3>
    <form class="card-body edit-post-form">
        <label for="post-title" class="form-label">Title</label>
        <input id="post-title" type="text" value="{{post.title}}" class="form-input"/>

        <label class="form-label" for="content">Content</label>
        <input name="content" type="text" value="{{post.title}}" class="form-input"/>

        <button type="submit" name="send" value="update" class="edit-post-btn btn">Update Post</button>
        <button type="button" name="send" value="delete" class="delete-post-btn btn">Delete Post</button>

    </form>
</div>

<script src="/tech-blog/public/js/editPost.js"></script>
<script src="/tech-blog/public/js/deletePost.js"></script>